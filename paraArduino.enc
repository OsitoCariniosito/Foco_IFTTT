void setup() {
  // put your setup code here, to run once:
pinMode(7, INPUT);
pinMode(8, OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
 
 
  // SE OPRIMIO EL BOTON DE ENCENDIDO?
  if (digitalRead(7) == HIGH) {
    // ENTONCES ENCENDEMOS EL LED
    digitalWrite(8, HIGH);
  }else{
 digitalWrite(8,LOW);
 
  }

}
